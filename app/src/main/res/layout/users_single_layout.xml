<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/single_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_marginBottom="15dp"
        tools:layout_marginLeft="15dp"
        tools:layout_marginTop="15dp"
        tools:src="@drawable/spaceman_1x" />

    <TextView
        android:id="@+id/single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="117dp"
        android:layout_marginTop="26dp"
        android:text="Display Name" />

    <TextView
        android:id="@+id/single_profession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/single_name"
        android:layout_marginTop="52dp"
        android:text="Profession" />

</RelativeLayout>